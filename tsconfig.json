{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": "./src",
		"rootDir": "./",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["src/**/*.ts", "api/**/*.ts"]
}
